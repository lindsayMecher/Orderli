<h4>Appetizers</h4>
<ul>
    <% @foods.where(food_type: "Appetizer").each do |appetizer|  %>
        <li>
            <%= appetizer.name %> - <%=number_to_currency(appetizer.price, unit: '$') %> -
            <%= link_to 'Remove Item',  appetizer,  method: :delete %><br><br>
        </li>
    <% end %>
</ul>




  